color-black = #000
color-red = #fc6c6e
color-orange = #fd923a
color-white = #fff

color-default-fg = color-black
color-default-bg = color-white
color-reverse-fg = color-white
color-reverse-bg = color-black

// font-sizes[0..10] for 11 font sizes
font-sizes-numeric = 12px
for i in (1..10)
  push(font-sizes-numeric, font-sizes-numeric[0] + (2*i))

font-sizes = {
  xs: font-sizes-numeric[0],
  s: font-sizes-numeric[1],
  small: font-sizes-numeric[1],
  m: font-sizes-numeric[2],
  middle: font-sizes-numeric[2],
  l: font-sizes-numeric[3],
  large: font-sizes-numeric[3],
  title-s: font-sizes-numeric[3],
  title-m: font-sizes-numeric[4],
  title-l: font-sizes-numeric[5],
  title-xl: font-sizes-numeric[6]
}
