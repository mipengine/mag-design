text-size(size)
  font-size font-sizes[size]

state-active()
  a:active &, &:active, .hover-enabled a:active &, .hover-enabled &:active
    {block}

state-hover()
  .hover-enabled a:hover &, .hover-enabled &:hover, &.hover
    {block}

state-disabled()
  &.disabled, &:disabled
    pointer-events none
    {block}

font-icon(iconName)
  &::before
    content icon-font-codepoint[iconName]

font-icon-content(iconName)
  content icon-font-codepoint[iconName]
