@import "../base/variables"
@import "../base/mixins"

mip-sidebar
  background-color color-default-bg
  width 65% !important
  padding-left .26rem
  padding-right .26rem
  a
    display block
    +state-active()
      background-color alpha(color-default-fg, 0.04)
  ul,
  ol
    list-style none
  li,
  dd
    line-height .3rem
    padding-top .1rem
    padding-bottom .1rem
  h2,
  h3,
  dt
    line-height .3rem
    margin-top .3rem

.MIP-SIDEBAR-MASK
  &:after,
  &:before
    opacity 0
    transition opacity .2s ease-in
    width 35%
    right 0
    top 50%
    transform translateY(-50%)
    position absolute
    content '轻触关闭菜单'
    text-align center
    color color-default-bg
    text-size small
  &:after
    padding-top 20px
  &:before
    margin-top -20px
    font-size .24rem
    content "\EA0F"
    font-family mag-icon
  &[data-side="right"]
    &:after,
    &:before
      right auto
      left 0
  &[show]
    &:after,
    &:before
      opacity 1
